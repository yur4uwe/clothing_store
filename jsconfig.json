{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "baseUrl": ".",
        "paths": {
            "@src/*": [
                "./src/*"
            ]
        },
        "allowJs": true,
        "checkJs": true,
        "jsx": "react",
        "lib": [
            "es6",
            "dom"
        ],
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.js"
    ]
}